{
    "name": "dynamic-text-anchors",
    "description": "Dynamic Text Anchors",
    "keywords": [
        "dynamic",
        "text",
        "anchor"
    ],
    "version": "1.4.14",
    "author": "Petr Chalupa",
    "license": "SEE LICENSE IN LICENSE.md",
    "type": "module",
    "main": "./dist/lib/index.js",
    "types": "./dist/lib/index.d.ts",
    "files": [
        "dist/lib/*",
        "LICENSE.md",
        "README.md",
        "package.json"
    ],
    "scripts": {
        "build-lib": "tsc",
        "build-lib-watch": "tsc --watch",
        "build-demo": "vite build ./src/demo",
        "build-all": "npm run build-lib && npm run build-demo",
        "demo-dev": "vite ./src/demo",
        "version-patch": "npm version patch -m \"Upgrade to version %s\"",
        "version-minor": "npm version minor -m \"Upgrade to version %s\"",
        "version-major": "npm version major -m \"Upgrade to version %s\"",
        "postversion": "git push --follow-tags"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.0.4",
        "lorem-ipsum": "^2.0.8",
        "sass": "^1.70.0",
        "sass-loader": "^14.1.0",
        "typescript": "^5.3.3",
        "vite": "^5.1.3",
        "vue": "^3.4.19"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Petr-Chalupa/DynamicTextAnchors.git"
    },
    "bugs": {
        "url": "https://github.com/Petr-Chalupa/DynamicTextAnchors/issues"
    },
    "homepage": "https://dynamictextanchors.onrender.com"
