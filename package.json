{
    "name": "dynamic-text-anchors",
    "description": "Dynamic Text Anchors",
    "keywords": [
        "dynamic",
        "text",
        "anchor"
    ],
    "version": "2.1.1",
    "author": "Petr Chalupa",
    "license": "SEE LICENSE IN LICENSE.md",
    "type": "module",
    "main": "./dist/lib/index.js",
    "types": "./dist/lib/index.d.ts",
    "files": [
        "dist/lib/*",
        "LICENSE.md",
        "README.md",
        "package.json"
    ],
    "scripts": {
        "demo-dev": "vite --config ./src/demo/vite.config.js",
        "build-demo": "vite build --config ./src/demo/vite.config.js",
        "build-lib": "tsc --build ./src/lib/tsconfig.json",
        "build-lib-watch": "tsc --build ./src/lib/tsconfig.json --watch",
        "version-patch": "npm version patch -m \"Upgrade to version %s\"",
        "version-minor": "npm version minor -m \"Upgrade to version %s\"",
        "version-major": "npm version major -m \"Upgrade to version %s\"",
        "postversion": "git push --follow-tags"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^6.0.1",
        "@vue/tsconfig": "^0.7.0",
        "lorem-ipsum": "^2.0.8",
        "sass": "^1.70.0",
        "sass-loader": "^16.0.5",
        "typescript": "^5.9.2",
        "vite": "^7.1.1",
        "vue": "^3.4.19",
        "vue-tsc": "^3.0.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Petr-Chalupa/DynamicTextAnchors.git"
    },
    "bugs": {
        "url": "https://github.com/Petr-Chalupa/DynamicTextAnchors/issues"
    },
    "homepage": "https://dynamictextanchors.onrender.com"
}
